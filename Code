function chunkArrayInGroups(arr, size) {
  var result = []
  for (let i =0;i<arr.length;i+=size){
    result.push(arr.slice(i,i + size))/*I am slicing from the last non cutted item until this same item + the size of the sub-array*/
    
    
  }

  return result;
}


/*

chunkArrayInGroups(["a", "b", "c", "d"], 2) should return [["a", "b"], ["c", "d"]].

*/
